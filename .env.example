APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=techplay
DB_USERNAME=postgres
DB_PASSWORD=

# ============================================
# SESSION & COOKIES
# ============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.techplay.gg
SESSION_SECURE_COOKIE=true
SESSION_SAMESITE=lax

SANCTUM_STATEFUL_DOMAINS=beta.techplay.gg,api-beta.techplay.gg

# ============================================
# BROADCASTING, FILESYSTEM, QUEUE
# ============================================
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# ============================================
# CACHE (Redis)
# ============================================
CACHE_STORE=redis
CACHE_PREFIX=techplay_

MEMCACHED_HOST=127.0.0.1

# ============================================
# REDIS
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Social Login
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI="${APP_URL}/api/auth/github/callback"

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/auth/google/callback"

# ============================================
# PRODUCTION RECOMMENDED SETTINGS
# ============================================

# Session Driver (use 'redis' for production with multiple servers)
# SESSION_DRIVER=redis

# Cache Store (use 'redis' for production)
# CACHE_STORE=redis

# CDN Configuration (for serving static assets)
CDN_URL=
# Example: CDN_URL=https://cdn.yourdomain.com

# Asset URL (images, css, js)
ASSET_URL="${APP_URL}"
# For CDN: ASSET_URL="${CDN_URL}"

# Image Storage (local, s3, or cloudinary)
MEDIA_DISK=local
# For production: MEDIA_DISK=s3

# Cloudinary (optional CDN for images)
CLOUDINARY_URL=
CLOUDINARY_UPLOAD_PRESET=

# Steam Login
STEAM_API_KEY=
STEAM_REDIRECT_URI="${APP_URL}/api/auth/steam/callback"

# Discord Login  
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI="${APP_URL}/api/auth/discord/callback"
